{% include 'partial/navbar.twig' %}
<head>
    <title>Episode List</title>
    <style>
        body {
            background-image: url('https://images7.alphacoders.com/133/1334906.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }

        .container {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .article-container {
            list-style: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .article-item {
            box-sizing: border-box;
            background-color: rgba(245, 245, 245, 0.9);
            width: 33.33%;
            padding: 10px;
            border: 1px solid #ccc;
            margin: 10px;
            text-align: center;
            border-radius: 5px;
        }

        .article-item a {
            text-decoration: none;
            color: #333;
        }

        .article-item a:hover {
            color: #555;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
<body>
<header>
    <h1>Episode List</h1>
</header>

<div class="container">
    <ul class="article-container">
        {% for episode in episodes %}
            <li class="article-item">
                <h2><a href="/episode/{{ episode.getId() }}">{{ episode.getName() }}</a></h2>
                <p>Air Date: {{ episode.getAirDate().format('Y-m-d') }}</p>
            </li>
        {% endfor %}
    </ul>
</div>

<footer>
    <p>&copy; hello </p>
</footer>
</body>
</html>
